                                d="M8.256 14a4.5 4.5 0 0 1-.229-1.004H3c.001-.246.154-.986.832-1.664C4.484 10.68 5.711 10 8 10q.39 0 .74.025c.226-.341.496-.65.804-.918Q8.844 9.002 8 9c-5 0-6 3-6 4s1 1 1 1z" />
                        </svg>
                    </span>
                </button>
            </div>

            <div class="col-12 col-md-6">
                {% if page == 'collection' %}
                {% include 'includes/metadata/collection_info.twig' %}
                {% elseif page == 'item' %}
                {% include 'includes/metadata/item_info.twig' %}
                {% elseif page == 'story' %}
                {% include 'includes/metadata/story_info.twig' %}
                {% endif %}
            </div>
        </div>
    </div>
</div>